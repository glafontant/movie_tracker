<section class="movie-details">
  <div class="image">
    <%= image_tag @movie.image_file_name %>
    <% if current_user%>
      <div class="faves">
         <%= fave_or_unfave_button(@movie, @favorite) %>
        <div class="count">
          <%= @fans.size %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="details">
    <h1><%= @movie.title %></h1>
    <h2>
      <%= year_on(@movie) %> &bull; <%= @movie.rating %>
      <div class="reviews">
        <%= render "shared/stars", percent: @movie.average_stars_as_percent %>
        <%= link_to pluralize(@movie.reviews.size, "review"), movie_reviews_path(@movie) %>
      </div>
    </h2>
    <p>
      <%= @movie.description %>
    </p>
    <table>
      <tr>
        <th>Director:</th>
        <td><%= @movie.director %></td>
      </tr>
      <tr>
        <th>Duration</th>
        <td><%= @movie.duration %></td>
      </tr>
      <tr>
        <th>Total Gross:</th>
        <td><%= total_gross(@movie) %></td>
      </tr>
    </table>
    <%= link_to "Write Review", new_movie_review_path(@movie), class: "review" %>
  </div>
  <aside>
    <% if @fans %>
      <h4>Fans</h4>
      <ul>
        <% @fans.each do |user| %>
          <li><%= profile_image(user, size: 35) %></li>
          <li>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
    <% end %>
    <% if @genres %>
      <h4>Genres</h4>
      <ul>
        <% @genres.each do |genre|%>
          <li><%= genre.name %></li>
        <% end %>
      </ul>
    <% end %>
  </aside>
</section>

<% if current_admin_user? %>
  <section class="admin">
    <%= link_to "Edit", edit_movie_path(@movie), class: "button" %>
    <%= link_to "Delete Movie", @movie, class: "button", method: :delete,
                                data: {confirm: "Are you sure?"} %>
  </section>
<% end %>